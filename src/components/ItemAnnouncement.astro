---
const { images = [] } = Astro.props;
---

{images.length > 0 && (
  <section class="w-full bg-black py-16">
    <div class="max-w-screen-xl mx-auto px-4 flex items-center gap-8">
      
      <!-- Texto a la izquierda -->
      <div class="min-w-[200px] flex flex-col justify-center items-start h-[400px]">
        <h2 class="text-white text-2xl font-semibold">Announcement</h2>
        <div class="w-30 h-px bg-white mt-2"></div>
      </div>

      <!-- Carrusel de imÃ¡genes -->
      <div class="flex-1 overflow-x-auto no-scrollbar">
        <div class="flex gap-6 snap-x snap-mandatory">
          {images.map((src, index) => (
            <div class="flex-shrink-0 w-[360px] h-[360px] bg-white rounded-lg snap-start overflow-hidden flex items-center justify-center">
              <img
                src={src}
                alt={`Announcement ${index + 1}`}
                class="object-contain w-full h-full"
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
)}
