---
 interface Props {
  name: string;
  slug: string;
  image: string;
  topics: string[];
  members: number;
  projects: number;

 }

 const { name, slug, image, topics, members, projects } = Astro.props;
---
 <div class="w-64 rounded-2xl shadow-md overflow-hidden hover:scale-105 transition-transform duration-300">
    <a class="cursor-pointer" href={slug}>

    <div class="bg-black text-white text-center px-4 pt-4 pb-6 rounded-t-2xl">
      <h2 class="text-xs font-semibold">{name}</h2>
    
      <div class="w-32 h-32 bg-gray-300 rounded-md mx-auto mt-4 shadow-md aspect-square">
        <img src={image} alt={`Picture of ${name}`} class="w-full h-full object-cover rounded-md ">
      </div>
    </div>

  
    <div class="bg-white text-center px-4 pb-6 pt-2 rounded-b-2xl">
      <h3 class="font-semibold mb-2 text-gray-600 ">Research topics</h3>
      <p class="text-sm text-gray-400 mb-4 leading-tight">
        {topics.join(", ")}
      </p>
      <div class="flex justify-around text-black font-bold">
        <div>
          <p class="text-2xl">{members}</p>
          <p class="text-sm font-medium text-gray-600">Members</p>
        </div>
        <div>
          <p class="text-2xl">{projects}</p>
          <p class="text-sm font-medium text-gray-600">Projects</p>
        </div>
      </div>
    </div>
    </a>
  </div>