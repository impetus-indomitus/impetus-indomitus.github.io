---
interface Props {
  title: string;
  description: string;
  image: string;
  contact: string;
}

const { title, description, image, contact } = Astro.props;
const id = title.replace(/\s+/g, '-').toLowerCase();
---

<div class="bg-white hover:bg-gray-900 transition-transform duration-300 rounded-lg shadow-lg p-6 hover:text-white hover:scale-105 hover:[&>p]:text-gray-300">
  <h3 class="text-xl font-semibold mb-2 mt-4">{title}</h3>
  <p class="text-gray-400 mb-4">{description}</p>
  <img src={image} alt={title} class="w-full h-96 rounded-lg mb-4 object-cover" />

  <!-- Contact Section -->
  <div class="mt-4 border-t pt-4">
    <h4 class="text-lg font-semibold mb-2">Contact us</h4>
    <p class="text-gray-500 text-sm hover:text-white transition-colors">{contact}</p>
  </div>
</div>
